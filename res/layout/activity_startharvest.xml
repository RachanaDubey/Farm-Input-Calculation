<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Startharvest"
    android:background="@drawable/bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="name"
        android:textStyle="italic"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Region"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/txt1"
        />
    <Spinner
        android:id="@+id/region"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:entries="@array/region">
    </Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Select Season"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt2"
        />
    <Spinner
        android:id="@+id/season"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:entries="@array/season">
    </Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Select Soil Type"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt3"
        />
    <Spinner
        android:id="@+id/soil"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:entries="@array/soiltype">
    </Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Select Land Size"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt4"
        />
    <Spinner
        android:id="@+id/land"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:entries="@array/landsize">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Select Crops"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt5"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/crop"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#FFA500"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center">
        </Spinner>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:layout_toRightOf="@+id/crop"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:background="#0009ff"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            />
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>


        <TextView
            android:visibility="invisible"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="100dp"
            android:text="name"
            android:textStyle="italic"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            />

    </RelativeLayout>




</LinearLayout>